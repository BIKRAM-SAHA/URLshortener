<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>
      <form action="/urlshorten" method="post">
        <div class="row">
          <label for="urlLong" class="sr-only visually-hidden-focusable b"
            >Enter url</label
          >
          <div class="col-sm-9 m-2">
            <input
              type="text"
              name="urlLong"
              class="form-control"
              placeholder="Url"
            />
          </div>
          <button class="btn btn-success col-2 m-2">Shorten</button>
        </div>
      </form>
      <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th scope="col">Long URL</th>
            <th scope="col">Short URL</th>
            <th scope="col">Clicks</th>
            <th scope="col">Expiry</th>
          </tr>
        </thead>
        <% urls.forEach(url => { %>
        <tbody>
          <tr>
            <th scope="row"><%= url.long %></th>
            <td><%= process.env.BASE_URL+'/'+url.short %></td>
            <td><%= url.clicks %></td>
            <td><%= url.expireAt.toString().split(' ').slice(1,4).join(' ') %></td>
          </tr>
        </tbody>
        <% }); %>
      </table>
    </div>
  </body>
</html>
